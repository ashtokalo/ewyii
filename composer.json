{
    "name": "ashtokalo/ewyii",
    "description": "Yii 2.0 Empty Web Application Template",
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2.0",
        "yiisoft/yii2": "~2.0.35",
        "vlucas/phpdotenv": "^4.1"
    },
    "authors": [
        {
            "name": "Alexey Shtokalo",
            "email": "alexey@shtokalo.net"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17@dev"
    },

    "scripts": {
        "check-style": [
            "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --dry-run -vv --diff --ansi"
        ],
        "fix-style": [
            "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --diff --diff-format=udiff --verbose"
        ]
    }
}
